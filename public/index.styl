body
	margin 0
	height 100vh
	font-size 16px
	font-family Quicksand, Helvetica, sans-ser
	background #141617
	color #f5f8fb

.flex
	display flex

	&--jc
		justify-content center

	&--dc
		flex-direction column

.h100p
	height 100%

.content
	flex 1

	&--center
		align-self center

	&__meta
		margin-top 16px
		font-size 12px
		color rgba(245, 248, 251, .5)

		a
			color rgba(245, 248, 251, .5)

.footer
	align-self end
	padding 0 24px

	&__link
		display flex
		align-items center
		color #5865f2

		& > span
			margin-right 0.5em

		& > img
			height: 32px
